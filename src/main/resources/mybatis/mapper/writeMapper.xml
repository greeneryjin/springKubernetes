<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "mybatis.springstudy.write.mapper">

    <insert id="insertWrite">
        INSERT INTO Writes
        (
            id,
            title,
            content,
            writer
        )
        VALUES
            (
                #{id}
                #{title},
                #{content},
                #{writer}
            )
    </insert>

</mapper>